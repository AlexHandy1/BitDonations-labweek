<div class='container'>
  <div class='row'>
    <div class="col-md-10 col-md-offset-1">
      <% if @entrepreneurs %>
        <% @entrepreneurs.each do |ent| %>
          <div class='row'>
            <div class='col-md-5' id='project'>
              <%=ent.project%>

              <form action='/ent/:id' method='post'>
                  <input type='hidden' name='ent_id' value='<%=ent.id%>'>
                  <button type='submit' class='btn btn-default' value='Find out more'>Find out more</button>
              </form>

              <form action='/donate/:id' method='post'>
                  <input type='hidden' name='ent_id' value='<%=ent.id%>'>
                  <button type='submit' class='btn btn-default' value='Donate'>Donate</button>
              </form>
            </div>
         </div>
        <%end%>
      <%end%>
    </div>
  </div>
</div>